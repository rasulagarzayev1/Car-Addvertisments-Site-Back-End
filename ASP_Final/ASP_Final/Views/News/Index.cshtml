@using ASP_Final.Models
@using ASP_Final.ViewModels
@model List<News>
@{
    ViewBag.Title = "News";
}

<div class="container" style="margin-top:30px;">
    <div class="row">

        @foreach (var item in Model)
        {
        <div class="col-md-4">
            <a href="@Url.Action("Single", "News", new { id = item.ID })">
                <img style="width:100%" src="~/Images/News/@item.Image" />
            </a>
            <a href="@Url.Action("Single", "News", new { id = item.ID })">
                <h3 style="color:black;">@item.Title</h3>
            </a>
            <a href="@Url.Action("Single", "News", new { id = item.ID })">
                <p style="color:black;">@item.Content.Substring(0, 150)</p>
            </a>

            <a href="@Url.Action("Single", "News", new { id = item.ID })"><span></span>READ MORE</a>
        </div>
        }

    </div>
</div>


